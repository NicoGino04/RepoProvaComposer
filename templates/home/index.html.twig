{% extends 'base.html.twig' %}

{% block body %}

<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="css/background.css">
    <link rel="stylesheet" href="css/lista.css">
    <link rel="stylesheet" href="css/slider.css">
</head>

<body>
    <!-- Animated Stars Background -->
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>

    <!-- Navigation -->
    <nav id="menu">
        <div class="menu-item1">
            <div class="menu-text">
                <a href="#" aria-label="Home">Logo</a>
            </div>
        </div>

        <div class="menu-item">
            <div class="menu-text">
                <a href="#">Chi siamo</a>
            </div>
            <div class="sub-menu">
                <div class="icon-box">
                    <div class="icon"><i class="far fa-cat"></i></div>
                    <div class="text">
                        <div class="title1">Nicola Longo <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="far fa-cat"></i></div>
                    <div class="text">
                        <div class="title1">Davide Argentile <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="far fa-cat"></i></div>
                    <div class="text">
                        <div class="title1">Gianmarco Zappatore <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="sub-menu-holder"></div>
            </div>
        </div>

        <div class="menu-item highlight">
            <div class="menu-text">
                <a href="#">Supporto</a>
            </div>
            <div class="sub-menu triple">
                <div class="top-container gb c icon-box">
                    <div class="icon big"><i class="far fa-book"></i></div>
                    <div class="text">
                        <div class="title">Where to start</div>
                        <div class="sub-text">Find out where to begin below</div>
                    </div>
                </div>
                <div class="box">
                    <h3>Your Journey</h3>
                    <a href="#">Get Started</a>
                    <a href="#">Learn the Basics</a>
                    <a href="#">Get Advanced</a>
                    <a href="#">Start Teaching</a>
                </div>
                <div class="box">
                    <h3>Your Tools</h3>
                    <a href="#">Turbo Editor</a>
                    <a href="#">Time Stopper</a>
                    <a href="#">Brain Enhancer</a>
                    <a href="#">Network Maker</a>
                </div>
                <div class="icon-box flat">
                    <div class="icon"><i class="fal fa-plug"></i></div>
                    <div class="text">
                        <div class="title">API Guide <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box flat">
                    <div class="icon"><i class="fal fa-comments"></i></div>
                    <div class="text">
                        <div class="title">Support Line <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box flat">
                    <div class="icon"><i class="fal fa-phone-volume"></i></div>
                    <div class="text">
                        <div class="title">Live Chat <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box flat">
                    <div class="icon"><i class="fal fa-book-spells"></i></div>
                    <div class="text">
                        <div class="title">Documentation <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>
        </div>

        {% if app.user %}

        <div class="menu-item1">
            <div class="menu-text">
                <a href="{{ path('app_privatearea') }}">Area privata</a>
            </div>
        </div>

        {% endif %}

        {% if not app.user %}

        <div class="menu-item1">
            <div class="menu-text">
                <a href="{{ path('app_login') }}">Accedi</a>
            </div>
        </div>

        {% endif %}

        <div id="sub-menu-container">
            <div id="sub-menu-holder">
                <div id="sub-menu-bottom"></div>
            </div>
        </div>
    </nav>

    <!-- Blur Overlay -->
    <div id="blur-overlay"></div>

    <!-- Hero Title -->
    <div id="title">
        <span>LA SALUTE</span>
        <br>
        <span>PRIMA</span>
        <br>
        <span>DI TUTTO</span>
    </div>

    <!-- Image Slider -->
    <div class="slider">
        <div class="slider__track">
            <div class="slider__slide active">
                <img src="https://images.unsplash.com/photo-1516655802732-dc776050098b?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=500&w=700&q=80"
                    alt="Snow on leafs" loading="lazy">
                <div class="slider__content">
                    <h2 class="slider__title">What do you know?</h2>
                </div>
            </div>
            <div class="slider__slide">
                <img src="https://images.unsplash.com/photo-1529761430595-036b79cb9d5e?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=500&w=700&q=80"
                    alt="Trees" loading="lazy">
                <div class="slider__content">
                    <h2 class="slider__title">Look from inside?</h2>
                </div>
            </div>
            <div class="slider__slide">
                <img src="https://images.unsplash.com/photo-1518805629729-3e55b81b2393?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=500&w=700&q=80"
                    alt="Mountains and houses" loading="lazy">
                <div class="slider__content">
                    <h2 class="slider__title">In the mountains?</h2>
                </div>
            </div>
            <div class="slider__slide">
                <img src="https://images.unsplash.com/photo-1488831948116-38bc1351c6d6?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=500&w=700&q=80"
                    alt="Sky and mountains" loading="lazy">
                <div class="slider__content">
                    <h2 class="slider__title">Above looks beautiful?</h2>
                </div>
            </div>
        </div>

        <!-- Navigation Arrows -->
        <button class="slider__arrow slider__arrow--prev" aria-label="Previous slide">‹</button>
        <button class="slider__arrow slider__arrow--next" aria-label="Next slide">›</button>

        <!-- Dots Navigation -->
        <div class="slider__controls">
            <button class="slider__dot active" aria-label="Go to slide 1"></button>
            <button class="slider__dot" aria-label="Go to slide 2"></button>
            <button class="slider__dot" aria-label="Go to slide 3"></button>
            <button class="slider__dot" aria-label="Go to slide 4"></button>
        </div>

    </div>

    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/628c8d2499.js" crossorigin="anonymous" defer></script>
    <!-- Slider Script -->
    <script src="javascript/slider.js"></script>
</body>

</html>

{% endblock %}